<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <com.example.fltctl.widgets.view.EInkCompatRoundedButton
        android:id="@+id/control_defaultVolume_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:elevation="6dp"
        >
        <ImageView
            android:id="@+id/control_defaultVolume_plus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_add_24"
            />
    </com.example.fltctl.widgets.view.EInkCompatRoundedButton>

    <com.example.fltctl.widgets.view.EInkCompatRoundedButton
        android:id="@+id/control_defaultVolume_minus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="6dp"
        >
        <ImageView
            android:id="@+id/control_defaultVolume_minus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/baseline_remove_24"
            />
    </com.example.fltctl.widgets.view.EInkCompatRoundedButton>

</LinearLayout>